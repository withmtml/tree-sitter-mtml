{
  "$schema": "https://tree-sitter.github.io/tree-sitter/assets/schemas/grammar.schema.json",
  "name": "mtml",
  "rules": {
    "source_file": {
      "type": "REPEAT",
      "content": {
        "type": "SYMBOL",
        "name": "_node"
      }
    },
    "_node": {
      "type": "CHOICE",
      "members": [
        {
          "type": "SYMBOL",
          "name": "function_tag"
        },
        {
          "type": "SYMBOL",
          "name": "block_tag"
        },
        {
          "type": "SYMBOL",
          "name": "text"
        },
        {
          "type": "SYMBOL",
          "name": "comment_tag"
        },
        {
          "type": "SYMBOL",
          "name": "ERROR"
        }
      ]
    },
    "function_tag": {
      "type": "PREC",
      "value": 1,
      "content": {
        "type": "CHOICE",
        "members": [
          {
            "type": "SYMBOL",
            "name": "_function_tag_dollar"
          },
          {
            "type": "SYMBOL",
            "name": "_function_tag_slash"
          },
          {
            "type": "SYMBOL",
            "name": "_function_tag_none"
          }
        ]
      }
    },
    "_function_tag_slash": {
      "type": "SEQ",
      "members": [
        {
          "type": "PATTERN",
          "value": "<[mM][tT]:?"
        },
        {
          "type": "SYMBOL",
          "name": "identifier"
        },
        {
          "type": "REPEAT",
          "content": {
            "type": "SYMBOL",
            "name": "modifier"
          }
        },
        {
          "type": "STRING",
          "value": "/>"
        }
      ]
    },
    "_function_tag_none": {
      "type": "SEQ",
      "members": [
        {
          "type": "PATTERN",
          "value": "<[mM][tT]:?"
        },
        {
          "type": "SYMBOL",
          "name": "identifier"
        },
        {
          "type": "REPEAT",
          "content": {
            "type": "SYMBOL",
            "name": "modifier"
          }
        },
        {
          "type": "STRING",
          "value": ">"
        }
      ]
    },
    "_function_tag_dollar": {
      "type": "SEQ",
      "members": [
        {
          "type": "PATTERN",
          "value": "<\\$[mM][tT]:?"
        },
        {
          "type": "SYMBOL",
          "name": "identifier"
        },
        {
          "type": "REPEAT",
          "content": {
            "type": "SYMBOL",
            "name": "modifier"
          }
        },
        {
          "type": "STRING",
          "value": "$>"
        }
      ]
    },
    "block_tag": {
      "type": "PREC",
      "value": 2,
      "content": {
        "type": "SEQ",
        "members": [
          {
            "type": "SEQ",
            "members": [
              {
                "type": "PATTERN",
                "value": "<[mM][tT]:?"
              },
              {
                "type": "FIELD",
                "name": "name",
                "content": {
                  "type": "SYMBOL",
                  "name": "identifier"
                }
              },
              {
                "type": "REPEAT",
                "content": {
                  "type": "SYMBOL",
                  "name": "modifier"
                }
              },
              {
                "type": "STRING",
                "value": ">"
              }
            ]
          },
          {
            "type": "REPEAT",
            "content": {
              "type": "SYMBOL",
              "name": "_node"
            }
          },
          {
            "type": "SEQ",
            "members": [
              {
                "type": "PATTERN",
                "value": "<\\/[mM][tT]:?"
              },
              {
                "type": "FIELD",
                "name": "name",
                "content": {
                  "type": "SYMBOL",
                  "name": "identifier"
                }
              },
              {
                "type": "STRING",
                "value": ">"
              }
            ]
          }
        ]
      }
    },
    "comment_tag": {
      "type": "SEQ",
      "members": [
        {
          "type": "PATTERN",
          "value": "<[mM][tT]:?[iI][gG][nN][oO][rR][eE]"
        },
        {
          "type": "STRING",
          "value": ">"
        },
        {
          "type": "CHOICE",
          "members": [
            {
              "type": "SYMBOL",
              "name": "text"
            },
            {
              "type": "BLANK"
            }
          ]
        },
        {
          "type": "PATTERN",
          "value": "\\/<[mM][tT]:?[iI][gG][nN][oO][rR][eE]>"
        }
      ]
    },
    "modifier": {
      "type": "CHOICE",
      "members": [
        {
          "type": "SYMBOL",
          "name": "_standard_modifier"
        },
        {
          "type": "SYMBOL",
          "name": "_replace_modifier"
        },
        {
          "type": "SYMBOL",
          "name": "_regex_modifier"
        },
        {
          "type": "SYMBOL",
          "name": "_field_modifier"
        }
      ]
    },
    "_standard_modifier": {
      "type": "SEQ",
      "members": [
        {
          "type": "FIELD",
          "name": "key",
          "content": {
            "type": "SYMBOL",
            "name": "identifier"
          }
        },
        {
          "type": "STRING",
          "value": "="
        },
        {
          "type": "FIELD",
          "name": "value",
          "content": {
            "type": "SYMBOL",
            "name": "string"
          }
        }
      ]
    },
    "_replace_modifier": {
      "type": "SEQ",
      "members": [
        {
          "type": "FIELD",
          "name": "key",
          "content": {
            "type": "STRING",
            "value": "replace"
          }
        },
        {
          "type": "STRING",
          "value": "="
        },
        {
          "type": "FIELD",
          "name": "pattern",
          "content": {
            "type": "SYMBOL",
            "name": "string"
          }
        },
        {
          "type": "STRING",
          "value": ","
        },
        {
          "type": "FIELD",
          "name": "replacement",
          "content": {
            "type": "SYMBOL",
            "name": "string"
          }
        }
      ]
    },
    "_regex_modifier": {
      "type": "SEQ",
      "members": [
        {
          "type": "FIELD",
          "name": "key",
          "content": {
            "type": "STRING",
            "value": "regex_replace"
          }
        },
        {
          "type": "STRING",
          "value": "="
        },
        {
          "type": "FIELD",
          "name": "pattern",
          "content": {
            "type": "SYMBOL",
            "name": "regex_pattern"
          }
        },
        {
          "type": "STRING",
          "value": ","
        },
        {
          "type": "FIELD",
          "name": "replacement",
          "content": {
            "type": "SYMBOL",
            "name": "string"
          }
        }
      ]
    },
    "_field_modifier": {
      "type": "SEQ",
      "members": [
        {
          "type": "FIELD",
          "name": "key",
          "content": {
            "type": "STRING",
            "value": "field"
          }
        },
        {
          "type": "CHOICE",
          "members": [
            {
              "type": "SEQ",
              "members": [
                {
                  "type": "STRING",
                  "value": ":"
                },
                {
                  "type": "SYMBOL",
                  "name": "identifier"
                }
              ]
            },
            {
              "type": "BLANK"
            }
          ]
        },
        {
          "type": "STRING",
          "value": "="
        },
        {
          "type": "FIELD",
          "name": "value",
          "content": {
            "type": "SYMBOL",
            "name": "string"
          }
        }
      ]
    },
    "regex_pattern": {
      "type": "SEQ",
      "members": [
        {
          "type": "STRING",
          "value": "\""
        },
        {
          "type": "STRING",
          "value": "/"
        },
        {
          "type": "PATTERN",
          "value": "[^/]*"
        },
        {
          "type": "STRING",
          "value": "/"
        },
        {
          "type": "STRING",
          "value": "\""
        }
      ]
    },
    "identifier": {
      "type": "PATTERN",
      "value": "[A-Za-z][A-Za-z0-9_]*"
    },
    "string": {
      "type": "CHOICE",
      "members": [
        {
          "type": "SEQ",
          "members": [
            {
              "type": "STRING",
              "value": "\""
            },
            {
              "type": "REPEAT",
              "content": {
                "type": "CHOICE",
                "members": [
                  {
                    "type": "PATTERN",
                    "value": "[^\"\\\\]+"
                  },
                  {
                    "type": "SYMBOL",
                    "name": "escape_sequence"
                  }
                ]
              }
            },
            {
              "type": "STRING",
              "value": "\""
            }
          ]
        },
        {
          "type": "SEQ",
          "members": [
            {
              "type": "STRING",
              "value": "'"
            },
            {
              "type": "REPEAT",
              "content": {
                "type": "CHOICE",
                "members": [
                  {
                    "type": "PATTERN",
                    "value": "[^'\\\\]+"
                  },
                  {
                    "type": "SYMBOL",
                    "name": "escape_sequence"
                  }
                ]
              }
            },
            {
              "type": "STRING",
              "value": "'"
            }
          ]
        }
      ]
    },
    "escape_sequence": {
      "type": "IMMEDIATE_TOKEN",
      "content": {
        "type": "SEQ",
        "members": [
          {
            "type": "STRING",
            "value": "\\"
          },
          {
            "type": "CHOICE",
            "members": [
              {
                "type": "PATTERN",
                "value": "[\\\\'\"]"
              },
              {
                "type": "PATTERN",
                "value": "[bfnrt]"
              },
              {
                "type": "PATTERN",
                "value": "u[0-9a-fA-F]{4}"
              }
            ]
          }
        ]
      }
    },
    "text": {
      "type": "PATTERN",
      "value": "[^<]+"
    },
    "ERROR": {
      "type": "TOKEN",
      "content": {
        "type": "PREC",
        "value": -1,
        "content": {
          "type": "PATTERN",
          "value": ".+"
        }
      }
    }
  },
  "extras": [
    {
      "type": "PATTERN",
      "value": "\\s"
    }
  ],
  "conflicts": [],
  "precedences": [],
  "externals": [],
  "inline": [],
  "supertypes": []
}
